pipeline{
    agent any
 parameters {
        string(name: 'firstName', defaultValue: 'my name', description: 'Enter your first name')
    }
    stages{
        stage('build'){
            steps{
                echo 'maven build'
            }
        }
        stage('Test'){
            steps{
                echo 'test successful'
            }
        }
        stage('Docker build'){
            steps{
                echo 'Docker imgae build successful'
            }
        }
        stage('deploy'){
            steps{
                echo 'deployment successful'
                echo "${params.firstName}"
            }
        }
    }
}
